<%= turbo_frame_tag "search_results" do %>
    <% users.each do |u| %>
        <li class="mt-3">
            <div class="d-flex justify-content-between">
                <div class="d-flex">
                    <%= image_tag u.profile_pic.attached? ? u.profile_pic : 'profile-default.png', class:"img-thumbnail rounded-circle border border-2", style:"width: 2.5rem;"%>
                    <div class="d-flex flex-column mx-2">
                        <small class="fw-bold" style="overflow:hidden; white-space: nowrap; text-overflow:ellipsis; max-width:10rem;"><%=link_to u, data:{turbo: false}, class:"a-decoration-none" do %><%= u.username %><% end %></small>
                    </div>
                </div>
            </div>
        </li>
    <% end %>
<% end %>